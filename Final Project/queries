;

CREATE TABLE rooms(
   room_no        INTEGER    NOT NULL PRIMARY KEY 
  ,availability   CHAR(3)    NOT NULL
  ,type           VARCHAR(6) NOT NULL
  ,wifi           CHAR(3)    NOT NULL
  ,tv             CHAR(3)    NOT NULL
  ,ac             CHAR(3)    NOT NULL
  ,price          INTEGER    NOT NULL
  ,Button         VARCHAR(4) NOT NULL
);

